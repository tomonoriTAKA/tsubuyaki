<h2>新規ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="form-group">
      <div class="field">
        <%= f.label :name, "名前"%><br />
        <%= f.text_field :name, class:"form-control"%>
      </div>


      <div class="field">
        <%= f.label :email, "メールアドレス"%><br />
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" , class:"form-control"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :description, "自己詳細文"%><br />
        <%= f.text_field :description , class:"form-control"%>
      </div>

      <div class="field">
        <%= f.label :image_url, "プロフィール画像URL "%><br />
        <%= f.text_field :image_url , class:"form-control"%>
      </div>

      <div class="field">
        プロフィール画像登録 <br>
        <%= f.label :image do %>
        <%= f.file_field :image %>
        <%= f.hidden_field :image_cache,class:"form-control"%>
        <% end %>
      </div>


      <div class="actions">
        <%= f.submit "サインアップ！" ,class: "btn btn-primary"%>
      </div>
    <% end %>
</div>
<%= render "devise/shared/links" %>
