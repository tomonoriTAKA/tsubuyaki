<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= link_to image_tag(@user.image,{alt:'プロフ画像'}), edit_user_registration_path %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'layouts/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>
  </div>
</div>
